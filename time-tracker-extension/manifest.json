{
  "manifest_version": 3,
  "name": "Time Tracker Extension",
  "description": "Tracks time spent on websites",
  "version": "1.0",
  "permissions": ["tabs", "storage", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["<all_urls>"]
}
